<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/city_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Name"
        android:layout_marginTop="50dp"
        android:textSize="50dp"
        android:textColor="#000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/temperature_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textSize="35dp"/>

            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="5dp"
                android:textSize="18dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/weather_icon_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/sunrise_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunrise: "
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/sunset_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunset: "
        android:textSize="20dp"/>

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/city_enter_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a City"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="see weather"
        android:layout_marginTop="5dp"
        android:onClick="selectCity"/>

</LinearLayout>